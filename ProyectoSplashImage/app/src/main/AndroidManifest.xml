<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="josevi.android.com.proyectosplashimage">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!--Se especifica que la que la primera actividad a
        ejecutar cuando arranque la aplicaciÃ³n sea la SplashActivity.java-->
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--Se define especifica que la que tras la SplashActivity.java
        se ejecute la MainActivity.java-->
        <activity android:name=".MainActivity"></activity>
    </application>

</manifest>

